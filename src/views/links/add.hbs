<div class="conteiner p-4 ">

    <div class="form-group col-md-6   mx-auto ">

        <form class="/linnks/add" method="POST">

            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" name="nome">


            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="CPF">CPF</label>
                    <input type="text" class="form-control" name="cpf" id="CPF">
                </div>
                <div class="form-group col-md-6">
                    <label for="fone">Telefone</label>
                    <input type="tel" class="form-control" id="fone" name="fone">
                </div>
            </div>

            
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="cidade">Cidade</label>
                    <input type="text" class="form-control" name="cidade" id="cidade">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputState">Estado</label>
                    <select id="inputState" name="estado" class="form-control">

                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="nasc">Nascimento</label>
                    <input type="date" class="form-control" name="nasc" id="nasc">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input type="password" class="form-control" id="inputPassword4" name="senha">
                </div>
            </div>
            

            <button type="submit" class="btn btn-success btn-block">Sign in</button>


        </form>
    </div>

</div>

<script>
    let optionList = document.getElementById('inputState').options;
    let options = [
        {
            text: 'PI',
            value: 'PI',
            selected: true
        },
        {
            text: 'CE',
            value: 'CE'

        },
        {
            text: 'MA',
            value: 'MA'
        }
    ];

    options.forEach(option =>
        optionList.add(
            new Option(option.text, option.value, option.selected)
        )
    );
</script>